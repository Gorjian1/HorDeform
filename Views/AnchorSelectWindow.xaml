<Window x:Class="Osadka.Views.AnchorSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор точки" Width="520" Height="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Padding="10" Background="White" BorderBrush="#22000000" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Выберите точку из данных или введите координаты вручную:"
                       FontWeight="Bold" Margin="0,0,0,8"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <TextBlock Text="Поиск по №:" VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchBox" Width="100" Margin="6,0,0,0" TextChanged="OnSearchChanged"/>
                        <TextBlock Text="  |  или вручную:" Margin="10,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="X:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ManualX" Width="90" Margin="4,0,0,0"/>
                        <TextBlock Text="Y:" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        <TextBox x:Name="ManualY" Width="90" Margin="4,0,0,0"/>
                        <CheckBox x:Name="ManualCheck" Content="Использовать ручной ввод" Margin="10,0,0,0"/>
                    </StackPanel>

                    <DataGrid x:Name="GridPoints" AutoGenerateColumns="False" IsReadOnly="True"
                              CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Цикл" Binding="{Binding CycleId}" Width="*" />
                            <DataGridTextColumn Header="№" Binding="{Binding N}" Width="*" />
                            <DataGridTextColumn Header="X" Binding="{Binding X, StringFormat=F3}" Width="*" />
                            <DataGridTextColumn Header="Y" Binding="{Binding Y, StringFormat=F3}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="ОК" Width="120" IsDefault="True" Click="OnOk"/>
                <Button Content="Отмена" Width="120" Margin="8,0,0,0" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
